<h2 class="ui center aligned medium icon header">
    Welcome to MessageMe - a complete Chat App
</h2>
<h4 class="ui center aligned medium icon header">

  <i class="circular orange coffee icon"></i>
    
  Login to Welcome
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

    <%= form_for(:session, html:{class: "ui form"}, url: login_path) do |f| %>      
        <div class="field">
          <%= f.label :username, "username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon orange"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon orange"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui blue submit button orange" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>